{
  "name": "troubadour-server",
  "description": "Client for Troubadour Song List Application",
  "version": "0.0.1",
  "author": "drearyworlds",
  "main": "dist/main.js",
  "scripts": {
    "clean": "rd /s /q .\\dist && rd /s /q .\\bin",
    "build": "tsc",
    "build-electron": "npm run build && npm run copyHtml",
    "rebuild": "npm run clean && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "copyHtml": "copy .\\src\\index.html .\\dist\\",
    "start": "npm run build && node dist/app.js",
    "pack": "electron-builder --dir",
    "dist": "npm run build-electron && electron-builder"
  },
  "build": {
    "appId": "com.electron.troubadour-server",
    "files": [
      "!bin",
      "!src",
      "!.env",
      "!.gitignore",
      "!azure-pipelines.yml",
      "!package-lock.json",
      "!README.md",
      "!tsconfig.json"
    ],
    "directories": {
      "buildResources": "res",
      "output": "bin"
    },
    "asar": false,
    "extraFiles": [
      {
        "from": "config.json",
        "to": "."
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drearyworlds/troubadour-server.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/drearyworlds/troubadour-server/issues"
  },
  "homepage": "https://github.com/drearyworlds/troubadour-server#readme",
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/express": "^4.16.1",
    "electron": "^12.0.1",
    "electron-builder": "^22.10.5",
    "tslint": "^5.12.1",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "mongoose": "^5.11.16",
    "tmi.js": "^1.7.3"
  }
}
